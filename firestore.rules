
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow users to create their own profile
      allow create: if request.auth != null && request.auth.uid == userId;
      // Allow users to read, update, and delete their own profile
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
    }
    match /swipes/{swipeId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
    }
    match /matches/{matchId} {
      allow read, create: if request.auth != null && request.resource.data.userIds.hasAny([request.auth.uid]);
    }
    match /chats/{chatId} {
      allow read, update: if request.auth != null && resource.data.userIds.hasAny([request.auth.uid]);
    }
  }
}
