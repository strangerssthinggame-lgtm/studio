
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Any authenticated user can read any user's profile.
      // This is necessary for the discovery feed and profile pages to work.
      allow read: if request.auth != null;

      // Only the authenticated owner of the profile can create, update, or delete it.
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /swipes/{swipeId} {
      // Only the user performing the swipe can create the swipe document.
      allow create: if request.auth != null && request.resource.data.swiperId == request.auth.uid;
      // Swipes are read by the handleSwipeFlow server-side, so no direct client read access is needed.
      allow read, update, delete: if false;
    }

    match /matches/{matchId} {
        // Users can only read match documents they are a part of.
        allow read: if request.auth != null && request.auth.uid in resource.data.userIds;
        // The server-side flow handles creating/updating matches.
        allow write: if false;
    }

    match /chats/{chatId} {
        // Users can only read/write to chat documents they are a part of.
        allow read, write: if request.auth != null && request.auth.uid in resource.data.userIds;
    }
  }
}
