
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read, create, update, and delete their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow logged-in users to start a chat
    match /chats/{chatId} {
      allow read, write: if request.auth != null && request.auth.uid in resource.data.userIds;
    }
    
    // Allow logged-in users to create swipes
    match /swipes/{swipeId} {
        allow create: if request.auth != null;
    }
    
    // Allow users in a match to access the match document
    match /matches/{matchId} {
      allow read, create: if request.auth != null && request.auth.uid in resource.data.userIds;
    }
  }
}
