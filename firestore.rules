rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users: Allow read for any authenticated user, but only allow a user to write to their own document.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Swipes: Users can create swipes and read their own.
    match /swipes/{swipeId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.swiperId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.swiperId;
    }

    // Matches & Chats: Users can read/write documents where their ID is in the userIds array.
    match /matches/{matchId} {
      allow read, write: if request.auth != null && request.auth.uid in resource.data.userIds;
    }
    
    match /chats/{chatId} {
      allow read, write: if request.auth != null && request.auth.uid in resource.data.userIds;

      // Messages: Users can read/write messages in chats they are part of.
      match /messages/{messageId} {
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/chats/$(chatId)).data.userIds.hasAny([request.auth.uid]);
      }
    }
  }
}
