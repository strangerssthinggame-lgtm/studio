
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read public profiles, but only write to their own.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null && request.auth.uid == userId;
    }

    // Authenticated users can record a swipe.
    match /swipes/{swipeId} {
        allow create: if request.auth != null;
    }
    
    // Authenticated users can create a match document.
    match /matches/{matchId} {
        allow create: if request.auth != null;
    }

    // Users can only access chats they are a part of.
    match /chats/{chatId} {
        allow read, create, update: if request.auth != null && request.auth.uid in resource.data.userIds;
        
        // Users can only read/write messages in chats they belong to.
        match /messages/{messageId} {
            allow read, create: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.userIds;
        }
    }
  }
}
