
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow any authenticated user to list and read user profiles
      allow list, read: if request.auth != null;
      // Allow a user to write only to their own document
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /chats/{chatId} {
      // Allow read/write only if the user is part of the chat
      allow read, write: if request.auth != null && request.auth.uid in resource.data.userIds;
    }

    match /chats/{chatId}/messages/{messageId} {
      // Allow read/write only if the user is part of the parent chat
      allow read, write: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.userIds;
    }
    
    match /swipes/{swipeId} {
      // Allow users to create swipes, but not read/update/delete them.
      // This prevents users from seeing who swiped on them directly.
      allow create: if request.auth != null;
    }
    
    match /matches/{matchId} {
        // Allow read only if the user is part of the match
        allow read: if request.auth != null && request.auth.uid in resource.data.userIds;
    }
  }
}
