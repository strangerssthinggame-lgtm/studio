
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Match any file in the 'users' directory
    match /users/{userId}/{allPaths=**} {
      // Allow read access to anyone (for public profiles, avatars, etc.)
      allow read;
      
      // Allow write (create, update, delete) access only if the user is authenticated
      // and the `userId` in the path matches their own UID.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
