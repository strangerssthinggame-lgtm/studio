rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Rules for user-specific folders
    match /users/{userId}/{allPaths=**} {
      // Any user (even unauthenticated) can read images.
      // This is necessary so users can see each other's profile pictures.
      allow read;

      // Only the authenticated user who owns this folder can write to it.
      // This is the key change: we verify the user's ID against the folder path.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
