rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Match any file inside a user-specific folder path.
    match /users/{userId}/{allPaths=**} {
      // Allow anyone to read files from user folders.
      // This is necessary so that other users can see profile pictures and banners.
      allow read;

      // Only allow a user to write (upload, update, delete) files
      // if they are authenticated and their user ID matches the folder ID.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
