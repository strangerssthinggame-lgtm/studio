rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Match any file in the 'users' directory
    match /users/{userId}/{allPaths=**} {
      // Allow read access to anyone (for public profile images)
      allow read;
      // Allow write (create, update, delete) access only if the user is authenticated
      // and their UID matches the {userId} in the path.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
