
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Match any file in any user's folder
    match /users/{userId}/{allPaths=**} {
      // Allow public read access for all profile images.
      // This is necessary so that other users can see profile pictures.
      allow read;

      // Allow write access (upload, update, delete) only to the
      // authenticated user who owns this directory.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
